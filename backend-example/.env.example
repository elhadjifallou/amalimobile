# Configuration AMALI - Backend Laravel

APP_NAME=AMALI
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.amali-app.com

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=amali_db
DB_USERNAME=root
DB_PASSWORD=

# Orange Money API
ORANGE_MERCHANT_KEY=your_merchant_key_here
ORANGE_TOKEN=your_bearer_token_here
ORANGE_WEBHOOK_SECRET=your_webhook_secret_here
ORANGE_SANDBOX=true

# Wave API
WAVE_API_KEY=your_wave_api_key_here
WAVE_SECRET_KEY=your_wave_secret_key_here
WAVE_SANDBOX=true

# Stripe (pour cartes bancaires internationales)
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Mail (pour les confirmations de paiement)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@amali-app.com
MAIL_FROM_NAME="${APP_NAME}"

# Frontend URLs
FRONTEND_URL=https://amali-app.com
PAYMENT_URL=https://payment.amali-app.com

# Session & Cache
SESSION_DRIVER=database
CACHE_DRIVER=redis

# Redis (pour les sessions et cache)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
